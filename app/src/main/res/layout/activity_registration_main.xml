<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".music.RegistrationMainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="348dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Flourishâ€™s Kitchen"
                android:textColor="@color/font_color"
                android:textSize="28dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Account Information"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="-240dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profil_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-250dp"
            android:layout_marginTop="70dp"
            android:adjustViewBounds="true"
            android:src="@drawable/profil_photo"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="@color/font_color"
            android:textSize="20dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="190dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name"
            android:textSize="16dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name"
            android:textSize="16dp"
            android:layout_marginTop="273dp"
            android:layout_marginLeft="-80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16dp"
            android:layout_marginTop="353dp"
            android:layout_marginLeft="-70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16dp"
            android:layout_marginTop="433dp"
            android:layout_marginLeft="-45dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/create_account_botton"
            style="@style/Bottom"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_marginTop="540dp"
            android:layout_marginLeft="60dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:text="Forgotten password"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="210dp"
            android:text="or "
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="190dp"
            android:text="Log in"
            android:textColor="@color/font_color"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <EditText
            android:id="@+id/first_name_edit"
            style="@style/LoginEditTextStyle"
            android:layout_width="363dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:paddingStart="20dp"/>
        <EditText
            android:id="@+id/last_name_edit"
            style="@style/LoginEditTextStyle"
            android:layout_width="363dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:paddingStart="20dp"/>
        <EditText
            android:id="@+id/email_edit"
            style="@style/LoginEditTextStyle"
            android:layout_width="363dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"/>
        <EditText
            android:id="@+id/resgistration_password_edit"
            style="@style/LoginEditTextStyle"
            android:layout_width="363dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="30dp"
            android:inputType="textPassword"
            android:paddingStart="20dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>